#include <stdio.h>
#include <pthread.h>

void* threadFunc(void* arg) {
    printf("Hello from Thread %d\n", *(int*)arg);
    return NULL;
}

int main() {
    pthread_t threads[2];
    int t_id[2] = {1, 2};

    for(int i=0;i<2;i++)
        pthread_create(&threads[i], NULL, threadFunc, &t_id[i]);

    for(int i=0;i<2;i++)
        pthread_join(threads[i], NULL);

    return 0;
}
