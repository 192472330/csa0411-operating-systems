#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>
#include <string.h>

int main() {
    int fd;
    char buffer[100];

    // Creating & writing to file
    fd = open("demo.txt", O_CREAT | O_RDWR, 0666);
    if (fd < 0) {
        perror("File creation failed");
        return 1;
    }

    char *text = "Hello, this is a demo for UNIX file system calls.\n";
    write(fd, text, strlen(text));

    // Move file offset to beginning
    lseek(fd, 0, SEEK_SET);

    // Read back the file content
    int bytesRead = read(fd, buffer, sizeof(buffer) - 1);
    buffer[bytesRead] = '\0'; // Null-terminate
    printf("Data read from file:\n%s\n", buffer);

    // Close file
    close(fd);

    return 0;
}
