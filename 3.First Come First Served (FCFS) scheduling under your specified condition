#include <stdio.h>

int main() {
    int n, i;
    printf("Enter number of processes: ");
    scanf("%d", &n);

    int burstTime[n], waitingTime[n], turnaroundTime[n];
    int totalWaiting = 0, totalTurnaround = 0;

    // Input burst times
    printf("Enter burst times for each process:\n");
    for(i = 0; i < n; i++) {
        printf("Process P%d: ", i + 1);
        scanf("%d", &burstTime[i]);
    }

    // FCFS: Calculate waiting times
    waitingTime[0] = 0; // First process waits 0
    for(i = 1; i < n; i++) {
        waitingTime[i] = waitingTime[i-1] + burstTime[i-1];
    }

    // Calculate turnaround times
    for(i = 0; i < n; i++) {
        turnaroundTime[i] = waitingTime[i] + burstTime[i];
        totalWaiting += waitingTime[i];
        totalTurnaround += turnaroundTime[i];
    }

    // Print results
    printf("\nProcess\tBurst Time\tWaiting Time\tTurnaround Time\n");
    for(i = 0; i < n; i++) {
        printf("P%d\t%d\t\t%d\t\t%d\n", i + 1, burstTime[i], waitingTime[i], turnaroundTime[i]);
    }

    printf("\nAverage Waiting Time: %.2f\n", (float)totalWaiting / n);
    printf("Average Turnaround Time: %.2f\n", (float)totalTurnaround / n);

    return 0;
}
