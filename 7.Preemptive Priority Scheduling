#include <stdio.h>
#include <limits.h>

int main() {
    int n, i, j, time = 0, completed = 0;
    printf("Enter number of processes: ");
    scanf("%d", &n);
    int bt[n], rem_bt[n], priority[n], wt[n], tat[n], p[n];
    int total_wt = 0, total_tat = 0;

    for (i = 0; i < n; i++) {
        printf("P%d burst time: ", i + 1);
        scanf("%d", &bt[i]);
        printf("P%d priority (lower number = higher priority): ", i + 1);
        scanf("%d", &priority[i]);
        rem_bt[i] = bt[i];
        p[i] = i + 1;
        wt[i] = 0;
    }

    while (completed != n) {
        int idx = -1;
        int highest_priority = INT_MAX;
        for (i = 0; i < n; i++) {
            if (rem_bt[i] > 0 && priority[i] < highest_priority) {
                highest_priority = priority[i];
                idx = i;
            }
        }

        if (idx != -1) {
            rem_bt[idx]--;
            time++;
            if (rem_bt[idx] == 0) {
                completed++;
                tat[idx] = time;
                wt[idx] = tat[idx] - bt[idx];
                total_wt += wt[idx];
                total_tat += tat[idx];
            }
        } else {
            time++;
        }
    }

    printf("Process\tBurst Time\tPriority\tWaiting Time\tTurnaround Time\n");
    for (i = 0; i < n; i++)
        printf("P%d\t%d\t\t%d\t\t%d\t\t%d\n", p[i], bt[i], priority[i], wt[i], tat[i]);

    printf("Average Waiting Time: %.2f\n", (float)total_wt / n);
    printf("Average Turnaround Time: %.2f\n", (float)total_tat / n);
    return 0;
}
