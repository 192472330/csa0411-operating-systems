#include <stdio.h>

int main() {
    int n, i, time_quantum;
    printf("Enter number of processes: ");
    scanf("%d", &n);
    int bt[n], rem_bt[n], wt[n], tat[n], p[n];
    int total_wt = 0, total_tat = 0;

    for (i = 0; i < n; i++) {
        printf("P%d burst time: ", i + 1);
        scanf("%d", &bt[i]);
        rem_bt[i] = bt[i];
        p[i] = i + 1;
    }

    printf("Enter time quantum: ");
    scanf("%d", &time_quantum);

    int done;
    do {
        done = 1;
        for (i = 0; i < n; i++) {
            if (rem_bt[i] > 0) {
                done = 0;
                if (rem_bt[i] > time_quantum) {
                    rem_bt[i] -= time_quantum;
                    for (int j = 0; j < n; j++)
                        if (j != i && rem_bt[j] > 0) wt[j] += time_quantum;
                } else {
                    for (int j = 0; j < n; j++)
                        if (j != i && rem_bt[j] > 0) wt[j] += rem_bt[i];
                    rem_bt[i] = 0;
                }
            }
        }
    } while (!done);

    for (i = 0; i < n; i++)
        tat[i] = bt[i] + wt[i];

    printf("Process\tBurst Time\tWaiting Time\tTurnaround Time\n");
    for (i = 0; i < n; i++)
        printf("P%d\t%d\t\t%d\t\t%d\n", p[i], bt[i], wt[i], tat[i]);

    return 0;
}
